<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="0dp"
    android:layout_margin="10dp"
    android:layout_height="200dp">
    
    <RelativeLayout
        android:background="#FAFAFA"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_movie"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:padding="10dp"
            android:src="@drawable/img_default" />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ln_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:weightSum="3"
            android:layout_toRightOf="@+id/iv_movie">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="2"
                android:text="Moonfall"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2022-02-03"
                android:layout_weight="1"
                android:textSize="20sp"
                android:maxLines="2"
                android:textColor="#4C4C4C"/>

            <TextView
                android:id="@+id/tv_overview"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A mysterious force knocks the moon from its orbit around Earth and sends it hurtling on a collision course with life as we know it."
                android:textSize="20sp"
                android:maxLines="2"
                android:textColor="#4C4C4C"/>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>